{
  "name": "swisnl/laravel-api",
  "type": "library",
  "description": "API in Laravel",
  "keywords": [
    "swisnl",
    "laravel-api"
  ],
  "homepage": "http://www.swis.nl",
  "license": "MIT",
  "authors": [
    {
      "name": "Dylan de Wit",
      "email": "ddewit@swis.nl",
      "homepage": "https://www.swis.nl",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.0",
    "dimsav/laravel-translatable": "^8.0",
    "laravel/framework": "5.5.*"
  },
  "require-dev": {
    "filp/whoops": "~2.0",
    "friendsofphp/php-cs-fixer": "^2.4",
    "mockery/mockery": "^1.0",
    "orchestra/testbench": "~3.5",
    "phpunit/php-code-coverage": "^5.3",
    "phpunit/phpunit": "~6.0",
    "spatie/phpunit-watcher": "^1.3",
    "squizlabs/php_codesniffer": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "Swis\\JsonApi\\Server\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-watch": "vendor/bin/phpunit-watcher watch",
    "check-style": "vendor/bin/php-cs-fixer fix --dry-run -vvv",
    "fix-style": "vendor/bin/php-cs-fixer fix -vvv"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    },
    "laravel": {
      "providers": [
        "Swis\\JsonApi\\Server\\Providers\\LaravelApiServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true
  }
}
