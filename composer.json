{
    "name": "swisnl/laravel-api",
    "type": "library",
    "description": "API in Laravel",
    "keywords": [
        "swisnl",
        "laravel-api"
    ],
    "homepage": "http://www.swis.nl",
    "license": "MIT",
    "authors": [
        {
            "name": "Dylan de Wit",
            "email": "ddewit@swis.nl",
            "homepage": "https://www.swis.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0",
        "dimsav/laravel-translatable": "^8.0",
        "laravel/framework": "5.5.*",
        "spatie/laravel-permission": "^2.6",
        "laravelcollective/html": "^5.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.4",
        "orchestra/testbench": "~3.5",
        "phpunit/phpunit": "~6.0",
        "squizlabs/php_codesniffer": "^2.3",
        "filp/whoops": "~2.0"
    },
    "autoload": {
        "psr-4": {
            "Swis\\LaravelApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "check-style": "vendor/bin/php-cs-fixer fix --dry-run -vvv",
        "fix-style": "vendor/bin/php-cs-fixer fix -vvv"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
